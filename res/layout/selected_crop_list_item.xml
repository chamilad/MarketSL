<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:text="crop_name" android:id="@+id/crop_name_selected"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:textSize="15px" android:textColor="#4082DA" android:textStyle="bold"></TextView>
	<LinearLayout android:id="@+id/LinearLayout01"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<TextView android:text="location" android:id="@+id/location_selected"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:paddingTop="5dip" android:paddingLeft="10dip"></TextView>
		<TextView android:text="price" android:id="@+id/price_selected"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:gravity="right" android:paddingLeft="30dip"></TextView>
	</LinearLayout>

</LinearLayout>
