<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="vertical">
	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Enter Crop Name" />

	<AutoCompleteTextView android:id="@+id/autocomplete_crop"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_marginLeft="5dp" />

	<Button android:text="Get Info" android:id="@+id/submit_crop"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:onClick="submit_query"></Button>
		
		<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="Or Browse by Scrolling" />

	<GridView xmlns:android="http://schemas.android.com/apk/res/android"
		android:id="@+id/gridview" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:columnWidth="90dp"
		android:numColumns="auto_fit" android:verticalSpacing="5dp"
		android:horizontalSpacing="5dp" android:stretchMode="none"
		android:gravity="center" />
</LinearLayout>
